{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "plugin:mocha/recommended",
    "plugin:chai-friendly/recommended",
    "plugin:chai-expect/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["mocha", "chai-friendly", "chai-expect"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
