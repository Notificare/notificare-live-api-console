{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "plugin:mocha/recommended",
    "plugin:chai-friendly/recommended",
    "plugin:chai-expect/recommended",
    "prettier",
    "prettier/standard"
  ],
  "plugins": ["standard", "prettier", "mocha", "chai-friendly", "chai-expect"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
